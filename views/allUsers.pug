extends layout/layout
block headContent
    title View People

block bodyContent
    h1 View People
    table
        tr
            th
                a(href='sort/sort/userId') User ID
            th
                a(href='sort/sort/name') Name
            th Email
            th Age
            th
            th
        each data in usersInfo
            tr
                td= data.userId
                td= data.name
                td= data.email
                td= data.age
                td
                    a(href='/edit/'+ data.userId)= 'Edit'
                td
                    a(href='/delete/'+ data.userId +'') Delete
    button(class='addUser')
        a(href='http://localhost:2000/addUser', id='back') Add New User
